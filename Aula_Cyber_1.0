        "if (palavra in lista): # se a palavra estiver na lista\n",
        "  print(\"xingamento detectado\")\n",
        "else: # se ela nao estiver\n",
        "  print(\"xingamento nao detectado\")"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def Cacapalavra (field): #\"(?i)\" ele detecta mesmo se for letra maiuscula ou minuscula.\n",
        "  match = re.search(\"(?i)|(gordo)|(bola)|(bambu)|(mula)|(retardado)|(retardada)|(boçal)|(idiota)|(magrelo)|(magrela)|(graveto)|(burro)|(burra)|(gorda)|(imbecil)|(cadela)|(bicha)|(corna)|(corno)|(egua)|(seu preto)|(seu macaco)|(m@c@co)\",field.lower())\n",
        "\n",
        "  if match:\n",
        "    print(\"xingamento detectado\")\n",
        "  else:\n",
        "    print(\"xingamento nao detectado\")\n",
        "Cacapalavra(input())\n"
      ],
